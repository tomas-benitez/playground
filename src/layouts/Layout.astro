---

import classnames from "classnames";

interface Props {
  title: string;
  showcaseName: string;
}

const showcases = [
  {
    name: "TrailEffect1",
    path: "/",
  },
  {
    name: "Tiles",
    path: "/tiles",
  },
  {
    name: "Tiles2",
    path: "/tiles2",
  },
  {
    name: "Tiles3",
    path: "/tiles3",
  },
  {
    name: "Vectors",
    path: "/vectors",
  },
  {
    name: "CenteredBox",
    path: "/centered-box",
  },
];

const { title, showcaseName } = Astro.props;
---

<!doctype html>
<html class="scroll-smooth lg:snap-y lg:snap-mandatory font-body" lang="en">
  <head>
    {import.meta.env.BASE_URL !== "/" && (
      <base href={`${import.meta.env.BASE_URL}/`} />
    )}
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="./favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Rubik:wght@300;400;500;700&family=Titillium+Web:wght@200;400;700&display=swap"
      rel="stylesheet"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="text-zinc-100">
    <div class="relative snap-start snap-always">
      <img src="./code-image-start-2.jpg" alt="Javascript code on a screen" />
      <ul class="flex items-center justify-center absolute inset-0 space-x-4">
          {showcases.map((showcase) => (
            <li>
              <a
                href={showcase.path}
                class={classnames(
                  "text-2xl font-bold text-zinc-700 hover:text-zinc-800 px-4 py-2 rounded-md shadow-md", 
                  showcase.name === showcaseName ? "bg-accent-500 pointer-events-none" : "bg-white"
                )}
              >
                {showcase.name}
              </a>
            </li>
          ))}
      </ul>
    </div>
    <main class="snap-start snap-always pb-12">
      <slot />
    </main>
  </body>
</html>

<style>
  :root {
    --header-height: 5rem;
    --body-bg: #003a5f;
  }

  html {
    scroll-padding-top: var(--header-height);
  }

  body {
    background-color: var(--body-bg);
  }

  img {
    width: 100%;
    height: calc(var(--header-height) + 20rem);
    object-fit: cover;
    object-position: bottom center;
  }

  .image-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      to top,
      rgba(0, 0, 0, 0.8) 0%,
      rgba(0, 0, 0, 0) 100%
    );
  }
</style>
